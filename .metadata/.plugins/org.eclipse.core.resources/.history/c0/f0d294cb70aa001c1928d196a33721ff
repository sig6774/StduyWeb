package Lotto;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class LottoMain {
	private int command;

	public LottoMain() {
		BufferedReader in = new BufferedReader(new InputStreamReader(System.in));
		
		program = new LottoPro(true);
		
		start();
	}
	
	public void start() {
		System.out.println("로또 프로그램이 시작");
		for (int i = 1; i < 11; i++) {
			System.out.println(i*10+"%");
			
			if (i == 10) {
				System.out.println("환영합니다");
		}
			}
		do {
			System.out.println("-----------Menu-------------");
			System.out.println("1. 추첨        2.보기       3.끝내기");
			System.out.println("-------------------------------");
			System.out.println(">>");
			try {
				this.command = Integer.parseInt(in.readLine());
			} catch (IOException e) {
				System.out.println("(System)IOException !! try again...");
				continue;
			}
			switch(this.command) {
			case RECOMMANDATION_NUMBER:
				program.start_recommadation();
				break;
			case PRINT_NUMBER:
				program.printNumber();
				break;
			case EXIT:
				System.out.println("Bye");
				
				return;
			}
		} while(true);
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		new LottoMain();

	}

}
